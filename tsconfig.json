{
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declarationDir": "dist/types",

        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],

        "pretty": true,

        "sourceMap": true,
        "alwaysStrict": true,
        "removeComments": true,

        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "preserveConstEnums": true,

        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    }
}
